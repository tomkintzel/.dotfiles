# Git
alias gpo="git push origin"
alias push="git push"
alias pull="git pull"
alias uncommit="git reset --soft HEAD~1"

# VS Code
alias vscode='code "`pwd`"'

# Show/hide hidden files in Finder
alias show="defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder"
alias hide="defaults write com.apple.finder AppleShowAllFiles -bool false && killall Finder"

# IP addresses
alias ip="curl ifconfig.me/ip ; echo"
alias localip="ifconfig -a | grep -o 'inet6\? \(addr:\)\?\s\?\(\(\([0-9]\+\.\)\{3\}[0-9]\+\)\|[a-fA-F0-9:]\+\)' | awk '{ sub(/inet6? (addr:)? ?/, \"\"); print }'"

# Flush Directory Service cache
alias flushdns="sudo dscacheutil -flushcache; sudo killall -HUP mDNSResponder"

if command -v bat &> /dev/null; then
    alias cat="bat --style=plain"
fi

alias th:co='ddev exec console th:co'
alias mount:netshare='sshfs ecw@192.168.149.220/media/Raid /Users/tomkin/media -o reconnect,allow_other,volname=NetShare'

# NPM
alias nrd='npm run dev'
alias nrb="npm run build"

#ddev
alias import-db='ddev import-db --src='
alias dd='ddev'
alias ddu='ddev start'
alias ddd='ddev stop'
alias ddr='ddev restart'
alias dds='ddev ssh'
alias ddb='ddev describe'
alias ddc='ddev config'
alias ddi='ddev import-db'
alias dde='ddev export-db'
#alias ddr='ddev remove'
alias ddm='ddev mysql'
alias ddmu='ddev mysql -u root -p'
alias ddmr='ddev mysql -u root -p -e "show databases;"'
alias ddnpm='ddev npm'
alias mr='ddev mr-dev'
alias mrcc='ddev mr-dev cache:clean && ddev mr-dev cache:flush'
alias ddci='ddev composer install'
alias ddcu='ddev composer update'
alias ddcdu='ddev composer dump-autoload'
alias ddcda='ddev composer dump-autoload -o'
alias ddex='ddev exec'
alias ddp='ddev poweroff'
alias build-store="ddev exec ./build-storefront.sh"
alias build-admin="ddev exec ./build-administration.sh"
#system
alias cl='clear'

# List all files colorized in long format
alias l="ls -laF"

# Modern CLI tool aliases (conditional on installation)
if command -v eza &> /dev/null; then
    alias ls="eza --icons --group-directories-first"
    alias l="eza -la --icons --group-directories-first --hyperlink"
    alias ll="eza -l --icons --group-directories-first --hyperlink"
    alias lt="eza --tree --level=2 --icons"
fi
